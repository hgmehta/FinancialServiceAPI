<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/MG_Companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Comapny Name"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/MG_Stockprices"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Stockprices"
        android:layout_below="@id/MG_Companyname"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/MG_Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changes"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/MG_Stockprices"
        android:textColor="@color/colorPrimaryDark" />


    <TextView
        android:id="@+id/MG_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ticker"
        android:layout_below="@id/MG_Changes"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>